pipeline {
    agent { docker { image 'node:16.17.1-alpine' } }
    stages {
        stage('build') {
            steps {
                sh 'node --version'
                sh 'npm ci'
                sh 'npm test'
                sh 'npm build'
            }
        }
        stage('deploy') {
            steps {
                sh 'node --version'
            }
        }
    }
}